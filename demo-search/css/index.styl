@import "reset.css"
@import "mixins.styl"
#app
  width 100%
  height 100%
  #content
    width 100%
    height 100%
    padding-bottom 50px
    padding-top 45px
    background-color #F5F5F5
    box-sizing border-box
    #header
      width 100%
      height 45px
      position fixed
      left 0
      top 0
      background-color #02a774
      border-bottom 1px solid white
      box-sizing border-box
      .myText
        color white
        height 45px
        line-height 45px
        width 100%
        text-align center
        font-size 25px
    #search
      font-size 0px
      width 100%
      height 60px
      background-color white
      box-sizing border-box
      padding 10px 10px
      .search-text
        font-size 16px
        font-weight bold
        width 77%
        height 100%
        background-color #dddddd
        border-radius 8px
        box-sizing border-box
        padding-left 5px
        margin-right 10px
        opacity 0.4
        border 0px
        outline none
      .search-submit
        width 20%
        height 100%
        background-color #02a774
        border 0px
        border-radius 4px
        color white
        font-weight bold
        font-size 18px
  #footer
    width 100%
    height 50px
    position fixed
    left 0px
    bottom 0px
    display flex
    .footerItem
      width 25%
      height 100%
      display flex
      flex-direction column
      align-items center
      justify-content center
      color #7e8c8d
      &.active
        color green
      .iconfont
        font-size 22px
      span
        font-size 12px

