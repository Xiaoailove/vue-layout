@import "reset.css"
@import "mixins.styl"
#app
  width 100%
  height 100%
  #content
    width 100%
    height 100%
    .icon-jiantou
      width 30px
      height 30px
      box-sizing border-box
      padding-top 5px
      padding-left 5px
      .icon-jiantou2
        font-size 20px
        color #999
    .main
      width 100%
      box-sizing border-box
      padding 0 30px
      .main-login
        padding-top 60px
        font-size 40px
        font-weight bold
        text-align center
        color #02a774
      .login_header_title
        text-align center
        padding-top 40px
        >a
          color #333
          font-size 18px
          padding-bottom 4px
          &:first-child
            margin-right 40px
          &.on
            color #02a774
            font-weight 700
            border-bottom 2px solid #02a774
      .login-content
        form
          div
            input
              width 100%
              height 100%
              padding-left 10px
              border 1px solid #ddd
              border-radius 4px
              box-sizing border-box
              outline 0
              font 400 14px Arial
            .login-message
              position relative
              margin-top 16px
              height 48px
              font-size 14px
              background-color #ffffff
              .switch-button
                overflow hidden
                font-size 14px
                width 40px
                height 16px
                border 1px solid #dddddd
                position absolute
                right 10px
                top 50%
                margin-top -8px
                border-radius 8px
                .switch-circle
                  width 16px
                  height 16px
                  border-radius 50%
                  border 1px solid #dddddd
                  position absolute
                  top -1px
                  left -1px
                .switch-text
                  color #dddddd
                  float right
              .get_verification
                position absolute
                top 50%
                right 10px
                transform translateY(-50%)
                border 0
                color #ccc
                font-size 14px
                background transparent
            .login_verification
              margin-top 16px
              height 48px
              font-size 14px
              background #ffffff
            .login_hint
              margin-top 12px
              color #999
              font-size 14px
              line-height 20px
              >a
                color #02a774
          .login_submit
              display block
              width 100%
              height 42px
              line-height 42px
              margin-top 30px
              border-radius 4px
              background-color #4cd96f
              color #ffffff
              text-align center
              font-size 16px
              border 0
        .about_us
          display block
          font-size 16px
          margin-top 20px
          text-align center
          color #999





