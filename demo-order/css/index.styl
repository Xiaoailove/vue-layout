@import "reset.css"
@import "mixins.styl"
#app
  width 100%
  height 100%
  #content
    width 100%
    height 100%
    padding-bottom 50px
    padding-top 45px
    background-color #F5F5F5
    box-sizing border-box
    #header
      width 100%
      height 45px
      position fixed
      left 0
      top 0
      background-color #02a774
      border-bottom 1px solid white
      box-sizing border-box
      .myText
        color white
        height 45px
        line-height 45px
        width 100%
        text-align center
        font-size 25px
    .order-main
      width 60%
      margin 0 auto
      text-align center
      padding-top 140px
      .order-person
        display block
        width 100%
        height 30%
      .order-text
        color #6a6a6a
        font-size 20px
        padding 10px 0
      .order-submit
        width 95px
        height 40px
        background-color #02a774
        color white
        font-size 16px
        border 0
        border-radius 8px
  #footer
    width 100%
    height 50px
    position fixed
    left 0px
    bottom 0px
    display flex
    .footerItem
      width 25%
      height 100%
      display flex
      flex-direction column
      align-items center
      justify-content center
      color #7e8c8d
      &.active
        color green
      .iconfont
        font-size 22px
      span
        font-size 12px

